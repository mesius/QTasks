<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.actionis.qtasks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".tasks.TasksActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".taskdetail.TaskDetailActivity"
            android:label="@string/title_activity_task_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".addedittask.AddEditTaskActivity"
            android:label="@string/title_activity_add_edit_task"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>